<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.Franfuu.view.PeluqueroCita">
    <children>
        <TableView fx:id="citasTable" layoutX="50.0" layoutY="50.0" prefHeight="400.0" prefWidth="700.0">
            <columns>
                <TableColumn fx:id="fechaColumn" prefWidth="150.0" text="Fecha">
                    <cellValueFactory>
                        <PropertyValueFactory property="fecha" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="horaColumn" prefWidth="150.0" text="Hora">
                    <cellValueFactory>
                        <PropertyValueFactory property="hora" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="observacionColumn" prefWidth="300.0" text="ObservaciÃ³n">
                    <cellValueFactory>
                        <PropertyValueFactory property="observacion" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="accionesColumn" prefWidth="100.0" text="Acciones">
                    <cellValueFactory>
                        <PropertyValueFactory property="acciones" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="serviciosColumn" prefWidth="100.0" text="Servicios">
                    <cellValueFactory>
                        <PropertyValueFactory property="servicios" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="eliminarServicioColumn" prefWidth="150.0" text="Eliminar Servicio">
                    <cellValueFactory>
                        <PropertyValueFactory property="eliminarServicio" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <Button layoutX="50.0" layoutY="500.0" mnemonicParsing="false" onAction="#onCrearServicio" text="Crear Servicio" />
        <Button layoutX="200.0" layoutY="500.0" mnemonicParsing="false" onAction="#onEditarEliminarServicio" text="Editar/Eliminar Servicio" />
    </children>
</AnchorPane>